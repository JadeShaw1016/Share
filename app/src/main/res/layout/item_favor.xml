<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:id="@+id/ll_message">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_favor_face"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/tv_favor_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:lines="1"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_favor_face" />

    <TextView
        android:id="@+id/tv_favor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_favor_face"
        android:layout_below="@+id/tv_favor_nickname"
        android:text="time"/>

    <TextView
        android:id="@+id/tv_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_favor_time"
        android:layout_below="@+id/tv_favor_nickname"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image"
        android:layout_alignParentEnd="true"/>

    <View style="@style/bg_line"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_image"/>
</RelativeLayout>