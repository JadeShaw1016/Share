<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_with_pwd_back"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/title_back_press"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/login_iv_title"
        style="@style/textstyle"
        android:gravity="center"
        android:text="登录"
        android:textColor="#000"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/login_bt_config"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/login_comfirm_button_margin_top"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_orange"
        android:gravity="center"
        android:layout_alignEnd="@+id/login_iv_title"
        android:text="配置"
        android:textColor="@color/fuxk_base_color_black"
        android:textSize="@dimen/login_comfirm_button_text_size" />

    <ImageView
        android:id="@+id/iv_login_with_pwd_username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_iv_title"
        android:src="@drawable/icon_register"/>

    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:textSize="16sp"
        android:textColor="#000"
        android:hint="请输入手机号"
        android:background="@drawable/bg_username"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_iv_title"
        android:layout_toEndOf="@+id/iv_login_with_pwd_username"/>

    <ImageView
        android:id="@+id/iv_login_with_pwd_pwd"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/iv_login_with_pwd_username"
        android:src="@drawable/icon_password"/>

    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:background="@drawable/bg_username"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_below="@id/iv_login_with_pwd_username"
        android:layout_toEndOf="@+id/iv_login_with_pwd_pwd"/>

    <TextView
        android:id="@+id/txtForgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="忘记密码？"
        android:textColor="#000"
        android:clickable="true"
        android:textSize="15sp"
        android:focusable="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/login_et_password"/>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtForgetPwd"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="登录"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="@drawable/selector_orange" />

</RelativeLayout>
