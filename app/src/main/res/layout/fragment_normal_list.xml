<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/title_custom" />
    </FrameLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableRefresh="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/normal_list_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_collect_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有收藏哦，快去圈子看看吧！"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_msg_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有评论哦，快去发布一个圈子吧！"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_fav_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有点赞哦，快去圈子看看吧！"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_fans_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有新粉丝哦！"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>